<h1> Members Only! </h1>
<ul>
<% @posts.each do |post| %>
    <li> <%= post.title %> </li>
    <% if user_signed_in? %>
        <span>authour:<%= current_user.name %></span> <br><br>
    <% else %>
    <span>authour: anonymous</span> <br><br>
    <% end %>
<% end %>
</ul>
<%= button_to "new post", new_post_path, method: :get  %> <br>
<% if user_signed_in? %>
    <%= button_to "logout", destroy_user_session_path, method: :delete  %>
<% else %>
    <%= button_to "login", new_user_session_path, method: :get  %>
<% end %>
